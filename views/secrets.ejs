<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">SEGREDOS</h1>

      <% users.forEach((user) => { %>
        <% if (user.secret.length > 50) { %>
          <p class="secret-text"><%= user.secret.substring(0, 50) %><a href="secrets/<%= user.id %>"> ...ver mais</a></p>

          <% } else {%>
            <p class="secret-text"><%= user.secret %></p>
          <% } %>
      <% }) %>

      
      <hr>

      <a class="btn btn-light btn-lg" href="/logout" role="button">Sair</a>
      <a class="btn btn-dark btn-lg" href="/submit" role="button">Enviar um segredo</a>
    </div>
  </div>
  
<%- include('partials/footer') %>